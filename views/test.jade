table#data-table
    thead
        tr
            th Selected
                br
                button#filter-selected.filter-button <i class="fas fa-check-square ticked-checkbox"></i>
                button#filter-not-selected.filter-button <i class="far fa-square"></i>
            th Supplier
                button#sort-supplier.sort-button(data-sort="asc") <i class="fas fa-sort"></i>
                br
                input#search-supplier(type="text" placeholder="Search")
            th Revenue
                button#sort-revenue.sort-button(data-sort="asc") <i class="fas fa-sort"></i>
                    //br
                    //input#revenue-slider(type="range" min="0" max="10000000" step="100000" value="0")
                br
                button#filter-revenue-sign >
                input#filter-revenue(type="text" value="0" placeholder="Filter")
            th Intensity
                br
                button#filter-intensity0.filter-button n
                button#filter-intensity1.filter-button 1
                button#filter-intensity2.filter-button 2
                button#filter-intensity3.filter-button 3
                button#filter-intensity4.filter-button 4
            th Reason1
            th Reason2
            th Reason3
            th Reason4
            th Comment
            th History
